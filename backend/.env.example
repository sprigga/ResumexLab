# Application Settings
PROJECT_NAME="Resume Management System"
VERSION="1.0.0"
API_V1_STR="/api"

# Database
# 原設定 (已註解於 2025-11-30，原因：統一資料庫路徑到 data 目錄)
# DATABASE_URL="sqlite:///./resume.db"
# 新設定：資料庫統一存放在 data 目錄（本地和 Docker 環境通用）
DATABASE_URL="sqlite:///./data/resume.db"

# Security
# 請使用以下 Python 指令生成安全的 SECRET_KEY:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="key your generated secret key here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000","http://localhost:58432"]

# Admin User (required - no defaults, app will refuse to start if not set)
# Generate a strong password: python -c "import secrets; print(secrets.token_urlsafe(16))"
ADMIN_USERNAME="your-admin-username"
ADMIN_PASSWORD="change-this-before-deploying"
